<view class="swiper-container">


    <block wx:if="{{'loading'}}">
        <!-- showLoading -->
        <view class="donut-container">
            <view class="donut"></view>
        </view>
    </block>


    <block wx:else>
        <swiper class="swiper" 
        indicator-dots="{{indicator-dots}}" 
        indicator-color="{{indicator}}" 
        autoplay="{{autoplay}}"
        current="0" 
        interval="{{interval}}" 
        duration="{{duration}}" 
        circular="{{circular}}" 
        vertical="{{vertical}}"
        bindchange="" 
        bindanimationfinish="">
        <block wx:for="{{bookList}}" wx:key="index">
            <swiper-item class="swiper-item">
                <view 
                    class="book-container bg-white"
                    hover-class="book-container-hover" 
                    data-author="{{item.author}}" 
                    data-category="{{item.category}}"
                    data-image="{{item_cover_url}}"
                    data-id="{{item.book_id}}" 
                    data-name="{{item.book_name}}" 
                    data-price="{{item.book_price}}"
                    data-publisher="{{item.book_publisher}}" 
                    data-file="{{item.file_url}}">
                    <view class="book-image">
                        <image class="cover_imag" src="{{item.cover_url}}" mode="scaleToFill"></image>
                    </view>
                    <view class="book-info">
                        <text class="book-name">{{item.book_name}}</text>
                        <text class="author">{{item.author}}</text>
                        <text class="publisher">{{item.book_publisher}}</text>
                    </view>
                </view>
            </swiper-item>
        </block>
     </swiper>
    </block>
</view>