
.loading-container{
    display: flex;
    justify-content: center;
    align-items: center;
    padding-top: 400rpx;
}

.book-container {
    box-sizing: border-box;
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
    align-content: space-between;

    padding: 50rpx 0;
}

.book {
    display: flex;
    flex-direction: column;
    justify-content: center;

    margin: 0 18rpx;
    margin-bottom: 50rpx;
    width: 208rpx;
    height: 380rpx;
    /*border: 1px solid #dbdbdb;*/
    box-shadow: 0 0 15rpx #cdcdcd;

    border-radius: 10rpx;
}

.book-hover {
    transform: scale(0.96, 0.96);
    transition: all 1 ease 0;
}


/* 这里这样写是什么意思 */
.book-image {
    width: 100%;
    height: 300rpx;
}

.book-image > image {
    width: 100%;
    height: 300rpx;
}

.book-name {
    display: flex;
    justify-content: center;
    align-items: center;
    margin-top: 10rpx;
}

.book-name > text{
    font-size: 25rpx;
    color: #1e1e1e;
}

.empty-container{
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;

    padding-top: 300rpx;
    
    box-sizing: border-box;
    color: #cdcdcd;
    width: 100%;
}

.userinfo-avatar{
    width: 128rpx;
    height: 128rpx;
    margin: 20rpx;
    border-radius: 50%;
}

.full-loading{
    position: fixed;
    width: 100%;
    height: 100%;
    top: 0px;
    left: 0px;
    z-index: 999;
    background-color: rgba(0, 0, 0, 0.5);

    color: white;
    font-size: 25rpx;

    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
}

.full-loading > view{
    width: 66.7%;
}

