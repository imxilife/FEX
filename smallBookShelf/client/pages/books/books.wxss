
.swiper-container{

  box-sizing: border-box;
  padding: 120rpx 0 50rpx 0;
  display: flex;
  justify-content: center;
  align-items: center;
}

.swiper{
  width: 750rpx;
  height: 800rpx;
}

.swiper-item {
  display: flex;
  justify-content: center;
  align-items: center;
}


.book-container{
  border: 1px solid #e6e6e6;
  width: 480rpx;
  height: 720rpx;

  padding: 30rpx 20rpx;
  
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  align-items: center;

  border-radius: 20px;
  box-shadow: 0 0 10rpx #dbdbdb;
}

.book-container-hover{
  transform: scale(0.96,0.96);
  transition: all 1 ease 0;
}

.book-image > image{
  width: 350rpx;
}

.book-info{
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  align-items: center;
  margin-top: 20px;
}

.book-name{
  font-size: 35rpx;
  color: #1e1e1e;
  margin-bottom: 8rpx;
}
.author{
  margin-bottom: 8rpx;
  color: #8a8a8a;
  font-size: 30rpx;
}

.publisher{
  color: #cdcdcd;
  font-size: 30rpx;
}


.donut-container{
  padding-top: 200rpx;
}
